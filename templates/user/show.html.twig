{% extends 'base.html.twig' %}

{% block title %}footstars | Profil{% endblock %}

{% block body %}
    <!-- Breadcrumb row -->
    <div class="breadcrumb-row">
        <div class="container">
            <ul class="list-inline">
                <li><a href="{{ path('home') }}">Accueil</a></li>
                <li>Profil</li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb row END -->
    <!-- contact area -->
    <div class="content-area">
        <!-- who we are -->
        <div class="container">
            <div class="row">
                <!-- Side Bar -->
                <div class="col-lg-9">
                    <div>
                        <h1 class="m-b20 m-t0">Profil</h1>
                        <div class="dez-separator bg-primary"></div>
                    </div>
                    <div class="col-lg-12 p-b20">
                        <div class="dez-tabs">
                            <ul class="nav nav-tabs">
                                <li class="nav-item"><a class="nav-link active" data-toggle="tab"
                                                        href="#web-design-1"><i class="fa fa-globe"></i> <span
                                                class="title-head">Informations générales</span></a></li>
                                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#graphic-design-1"><i class="fa-solid fa-gear"></i> <span
                                                class="title-head">Paramètres</span></a></li>
                            </ul>
                            <div class="tab-content">
                                <div id="web-design-1" class="tab-pane active">
                                    <div class="col-lg-12 col-sm-12">
                                        <h3 class="m-b20 m-t0">Informations générales</h3>
                                        <ul class="list-arrow-circle green">
                                            <li>Nom : {{ app.user.lastname }}</li>
                                            <li>Prénom : {{ app.user.firstname }}</li>
                                            <li>Pseudo : {{ app.user.pseudo }}</li>
                                            <li>E-mail : {{ app.user.email }}</li>
                                            <li>Téléphone : {{ app.user.phone }}</li>
                                            <li>Pays : {{ app.user.country }}</li>
                                        </ul>
                                    </div>
                                </div>
                                <div id="graphic-design-1" class="tab-pane">
                                    <div class="col-lg-12 col-sm-12">
                                        <h3 class="m-b20 m-t0">Modifier mon profil</h3>
                                        {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour mon profil'}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Side Bar END -->
                <!-- Right Bar -->
                <div class="col-lg-3">
                    <div class="icon-bx-wraper bx-style-1 p-a30 center m-b15">
                        <div class="icon-bx-sm text-primary bg-white radius border-2 m-b20"><a href="#"
                                                                                               class="icon-cell"><i
                                        class="fa fa-user"></i></a></div>
                        <div class="icon-content">
                            <h5 class="dez-tilte text-uppercase">{{ app.user.pseudo }}</h5>
                            {% if is_granted('ROLE_ADMIN') %}
                                <p>Administrateur</p>
                            {% else %}
                                <p>Utilisateur</p>
                            {% endif %}
                            <a href="{{ path('app_logout') }}" class="site-button red radius-xl w-100 m-r15"
                               type="button">Déconnexion</a>
                        </div>
                    </div>
                </div>
                <!-- Right Bar END -->
            </div>
        </div>
        <!-- who we are END -->
    </div>
{% endblock %}
