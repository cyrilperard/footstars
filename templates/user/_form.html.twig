{{ form_start(form) }}
<div class="row mb-3">
    <div class="col-md-12 row mb-3">
        <div class="col-md-6">
            {{ form_label(form.first_name, 'Prénom') }}
            <br>
            {{ form_widget(form.first_name) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.last_name, 'Nom') }}
            <br>
            {{ form_widget(form.last_name) }}
        </div>
    </div>
    <div class="col-md-12 row mb-3">
        <div class="col-md-6">
            {{ form_label(form.pseudo, 'Pseudonyme') }}
            <br>
            {{ form_widget(form.pseudo) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.email, 'Adresse E-mail') }}
            <br>
            {{ form_widget(form.email) }}
        </div>
    </div>
    <div class="col-md-12 row mb-3">
        <div class="col-md-6">
            {{ form_label(form.phone, 'Téléphone') }}
            <br>
            {{ form_widget(form.phone) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.country, 'Pays de résidence') }}
            <br>
            {{ form_widget(form.country) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 text-center">
        <button class="btn btn-success mb-2" style="background-color: #6b8e23">{{ button_label|default('Save') }}</button>
        <a href="/reset-password" class="btn btn-success" style="background-color: #6b8e23">Modifier mon mot de passe</a>
    </div>
    <div class="col-md-6 text-center">
        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{{ form_end(form) }}